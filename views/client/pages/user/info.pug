extends ../../layouts/default.pug
include ../../mixin/box-head.pug

block main
	.container.my-3
		.row
			.col-12
				+box-head("Thông tin tài khoản")

		.row 
			.col-12
				div 
					if (user.avatar)
						img(src=user.avatar width="150px" class="mb-3")
					else
						img(src="/admin/images/avatar.png" width="150px" class="mb-3")

				if (user.fullName)
					p Họ tên: <b>#{user.fullName}</b>

				if (user.email)
					p Email: <b>#{user.email}</b>

				if (user.phone)
					p Số điện thoại: <b>#{user.phone}</b>



